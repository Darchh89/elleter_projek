<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_image"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="320dp"
        android:layout_height="361dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rectangle_16" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="71dp"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/montserrat"
        android:text="2025 E-Letter from SMK Negeri 2 Singosari"
        android:textColor="#B9B9B9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="320dp"
        android:layout_height="361dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="62dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/group" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="E - Letter"
            android:textColor="#000000"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subtitleText"
            android:layout_width="301dp"
            android:layout_height="36dp"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="Sistem Manajemen Surat dan Dispensasi"
            android:textColor="#000000"
            android:textSize="14sp" />

        <!-- Keterangan bawah -->

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGuru"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:backgroundTint="#39A2DB"
            android:padding="12dp"
            android:text="Lanjutkan sebagai Guru"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:backgroundTint="#1F2937"
            app:cornerRadius="12dp"
            app:icon="@drawable/book"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="@android:color/white" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSiswa"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="12dp"
            android:text="Lanjutkan sebagai Siswa"
            android:textAllCaps="false"
            android:textColor="#39A2DB"
            android:textSize="14sp"
            app:cornerRadius="12dp"
            app:icon="@drawable/material_symbols_person"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="#39A2DB"
            app:strokeColor="#39A2DB"
            app:strokeWidth="2dp" />


        <TextView
            android:id="@+id/textBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"
            android:text="Pilih peran anda untuk melanjutkan"
            android:textColor="#333333"
            android:textSize="13sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
