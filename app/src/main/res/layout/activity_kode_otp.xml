<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    tools:context=".kode_otp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-16dp">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:text="Pin terkirim ke email Anda"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/textView9"
            app:layout_constraintHorizontal_bias="0.404"
            app:layout_constraintStart_toStartOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarBack"
            android:layout_width="254dp"
            android:layout_height="25dp"
            android:layout_marginTop="29dp"
            android:background="@android:color/white"
            android:elevation="4dp"
            app:contentInsetStartWithNavigation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/weui_back_filled">

            <TextView
                android:layout_width="254dp"
                android:layout_height="25dp"
                android:text="Kembali ke Halaman Utama"
                android:textColor="#A0A0A0"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="56dp"
                tools:layout_editor_absoluteY="19dp" />
        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="kode otp"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="@+id/textView9"
            app:layout_constraintStart_toStartOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Masukan 6 digit"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="@+id/textView9"
            app:layout_constraintStart_toStartOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="358dp"
            android:layout_height="57dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="161dp"
            android:layout_marginEnd="25dp"
            android:fontFamily="@font/montserrat_extrabold"
            android:gravity="center"
            android:text="OTP"
            android:textColor="#101010"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/IDSiswa"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/inputbergambar"
            android:drawablePadding="12dp"
            android:hint="Masukan Kode OTP"
            android:inputType="number"
            android:maxLength="6"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/textView9"
            app:layout_constraintStart_toStartOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/textView14" />

        <Button
            android:id="@+id/buttonMasuk4"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#FE9F45"
            android:fontFamily="@font/montserrat_extrabold"
            android:text="Konfirmasi"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:iconGravity="textStart"
            app:iconPadding="10dp"
            app:iconTint="@null"
            app:layout_constraintEnd_toEndOf="@+id/IDSiswa"
            app:layout_constraintHorizontal_bias="0.031"
            app:layout_constraintStart_toStartOf="@+id/IDSiswa"
            app:layout_constraintTop_toBottomOf="@+id/IDSiswa"
            app:strokeColor="#FF7235"
            app:strokeWidth="2dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>