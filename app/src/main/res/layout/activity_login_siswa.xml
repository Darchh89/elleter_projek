<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:touchscreenBlocksFocus="true"
    tools:context=".login_siswa">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarBack2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="4dp"
        app:contentInsetStartWithNavigation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/weui_back_filled">

        <TextView
            android:layout_width="254dp"
            android:layout_height="25dp"
            android:text="Kembali ke Halaman Utama"
            android:textColor="#A0A0A0"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="19dp" />
    </androidx.appcompat.widget.Toolbar>

    <Button
        android:id="@+id/buttonMasuk2"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#FF7235"
        android:fontFamily="@font/montserrat_extrabold"
        android:text="Masuk"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:icon="@drawable/pintuuuu"
        app:iconGravity="textStart"
        app:iconPadding="10dp"
        app:iconTint="@null"
        app:layout_constraintEnd_toEndOf="@+id/PasswordLoginG"
        app:layout_constraintStart_toStartOf="@+id/PasswordLoginG"
        app:layout_constraintTop_toBottomOf="@+id/PasswordLoginG" />

    <TextView
        android:id="@+id/textViewBergabung"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:text="Masuk ke E-Letter"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <EditText
        android:id="@+id/IDGuru"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/inputbergambar"
        android:drawableStart="@drawable/tagoren"
        android:drawablePadding="12dp"
        android:hint="ID"
        android:inputType="text"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewBergabung" />


    <TextView
        android:id="@+id/TextDaftar"
        android:layout_width="105dp"
        android:layout_height="57dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="368dp"
        android:backgroundTint="#375FE5"
        android:clickable="true"
        android:text="Daftar"
        android:textColor="#375FE5"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/BtnDaftar"
        app:layout_constraintTop_toBottomOf="@+id/buttonMasuk2" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="201dp"
        android:layout_height="57dp"
        android:layout_marginTop="104dp"
        android:fontFamily="@font/montserrat_extrabold"
        android:gravity="center"
        android:text="E - Letter"
        android:textColor="#000000"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="142dp"
        android:layout_height="26dp"
        android:layout_marginTop="7dp"
        android:gravity="center_vertical|end"
        android:text="Lupa Kata Sandi?"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/PasswordLoginG"
        app:layout_constraintTop_toBottomOf="@+id/PasswordLoginG" />

    <TextView
        android:id="@+id/BtnDaftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="368dp"
        android:layout_marginEnd="10dp"
        android:text="Belum punya akun?"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.365"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonMasuk2" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/PasswordLoginG"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/inputbergambar"
        android:drawableStart="@drawable/gboren"
        android:drawablePadding="12dp"
        android:hint="Masukan Password"
        android:inputType="textPassword"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/IDGuru"
        app:layout_constraintStart_toStartOf="@+id/IDGuru"
        app:layout_constraintTop_toBottomOf="@+id/IDGuru" />

</androidx.constraintlayout.widget.ConstraintLayout>