<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F7F8"
    tools:context=".Beranda">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardLihatSurat"
        android:layout_width="359dp"
        android:layout_height="138dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="40dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#E0E0E0"
        app:strokeWidth="1dp">

        <!-- Layout di dalam CardView untuk mengatur posisi teks -->
        <LinearLayout
            android:layout_width="359dp"
            android:layout_height="138dp"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Teks Judul -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lihat Surat"
                android:textColor="@android:color/black"
                android:textSize="28sp"
                android:textStyle="bold" />

            <!-- Teks Deskripsi -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Liihat surat masuk dengan proses yang lebih ringkas dan efisien"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/montserrat_subrayada_bold"
        android:text="BERANDA"
        android:textAllCaps="true"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="152dp"
        android:text="Selamat Datang! ðŸ‘‹"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="74dp"
        android:layout_height="89dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_smkn_2_singosari" />

    <!-- =================== CARDVIEW YANG ANDA MINTA =================== -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardBuatSurat"
        android:layout_width="359dp"
        android:layout_height="138dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="40dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toTopOf="@+id/cardLihatSurat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:strokeColor="#E0E0E0"
        app:strokeWidth="1dp">

        <!-- Layout di dalam CardView untuk mengatur posisi teks -->

        <LinearLayout
            android:layout_width="359dp"
            android:layout_height="138dp"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Teks Judul -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buat Surat"
                android:textColor="@android:color/black"
                android:textSize="28sp"
                android:textStyle="bold" />

            <!-- Teks Deskripsi -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Ajukan dan pantau permohonan dispensasi dengan mudah"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
    <!-- ============================================================= -->


    <!-- Button lain bisa Anda ubah menjadi CardView juga jika mau -->

</androidx.constraintlayout.widget.ConstraintLayout>
