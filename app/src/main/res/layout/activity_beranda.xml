<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F7F8"
    tools:context=".Beranda">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="161dp"
        android:layout_height="27dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="BERANDA"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="202dp"
        android:layout_height="27dp"
        android:layout_marginStart="20dp"
        android:text="Selamat Datang! ðŸ‘‹"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_dispensasi"
        android:layout_width="0dp"
        android:layout_height="197dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_card_background">

            <ImageView
                android:id="@+id/logo_surat"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="35dp"
                android:src="@drawable/icon_lihatsurat"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/title_surat"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="65dp"
                android:layout_marginEnd="35dp"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center|center_horizontal"
                android:text="Lihat Surat Dispensasi"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/subtitle_surat"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center|start"
                android:text="Ajukan dan pantau permohonan dispensasi dengan mudah."
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_surat" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_izin"
        android:layout_width="0dp"
        android:layout_height="197dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_dispensasi">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_card_background_2">

            <ImageView
                android:id="@+id/logo_surat_2"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="35dp"
                android:src="@drawable/icon_tulissurat"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/title_surat_2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="65dp"
                android:layout_marginEnd="35dp"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center|center_horizontal"
                android:text="Buat Surat Izin"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/subtitle_surat_2"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center|start"
                android:text="Atur surat masuk dengan proses yang lebih ringkas dan efisien"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_surat_2" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>