<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SignUpGuru">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarBack"
        android:layout_width="254dp"
        android:layout_height="25dp"
        android:layout_marginTop="25dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        app:contentInsetStartWithNavigation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/weui_back_filled">

        <TextView
            android:layout_width="254dp"
            android:layout_height="25dp"
            android:text="Kembali ke Halaman Utama"
            android:textColor="#A0A0A0"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="19dp" />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/ViewBuatAkun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:fontFamily="@font/montserrat_extrabold"
        android:gravity="center"
        android:text="Buat Akun"
        android:textColor="@color/black"
        android:textSize="33sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TextViewBergabung"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:text="Bergabung dengan sistem E-Letter"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ViewBuatAkun" />

    <EditText
        android:id="@+id/NamaLengkap"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/inputbergambar"
        android:drawableStart="@drawable/person"
        android:drawablePadding="12dp"
        android:fontFamily="@font/montserrat_semibold"
        android:hint="Masukan Nama Lengkap"
        android:inputType="textPersonName"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextViewBergabung" />

    <EditText
        android:id="@+id/EmailGuru"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/inputbergambar"
        android:drawableStart="@drawable/address"
        android:drawablePadding="12dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/NamaLengkap"
        app:layout_constraintStart_toStartOf="@+id/NamaLengkap"
        app:layout_constraintTop_toBottomOf="@+id/NamaLengkap" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/PasswordGuru"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:boxBackgroundMode="none"
        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="@+id/EmailGuru"
        app:layout_constraintStart_toStartOf="@+id/EmailGuru"
        app:layout_constraintTop_toBottomOf="@+id/EmailGuru"
        app:passwordToggleEnabled="true"
        app:passwordToggleDrawable="@drawable/custom_password_toggle"
        app:passwordToggleTint="@null">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/inputbergambar"
            android:drawableStart="@drawable/lock"
            android:drawablePadding="12dp"
            android:hint="Konfirmasi Kata Sandi"
            android:inputType="textPassword"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#000000"
            android:textSize="16sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ConfirmPasswordGuru"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:boxBackgroundMode="none"
        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="@+id/PasswordGuru"
        app:layout_constraintStart_toStartOf="@+id/PasswordGuru"
        app:layout_constraintTop_toBottomOf="@+id/PasswordGuru"
        app:passwordToggleEnabled="true"
        app:passwordToggleDrawable="@drawable/custom_password_toggle"
        app:passwordToggleTint="@null">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/inputbergambar"
            android:drawableStart="@drawable/lock"
            android:drawablePadding="12dp"
            android:hint="Konfirmasi Kata Sandi"
            android:inputType="textPassword"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#000000"
            android:textSize="16sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/Token"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/inputbergambar"
        android:drawableStart="@drawable/centang"
        android:drawablePadding="12dp"
        android:hint="Masukan Kode Guru"
        android:inputType="text"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/ConfirmPasswordGuru"
        app:layout_constraintStart_toStartOf="@+id/ConfirmPasswordGuru"
        app:layout_constraintTop_toBottomOf="@+id/ConfirmPasswordGuru" />


    <Button
        android:id="@+id/ButtonDaftarGuru"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="26dp"
        android:backgroundTint="#39A2DB"
        android:fontFamily="@font/montserrat_extrabold"
        android:text="Daftar"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:icon="@drawable/tambahorang"
        app:strokeColor="#106F85"
        app:strokeWidth="2dp"
        app:iconGravity="textStart"
        app:iconPadding="10dp"
        app:iconTint="@null"
        app:layout_constraintEnd_toEndOf="@+id/Token"
        app:layout_constraintStart_toStartOf="@+id/Token"
        app:layout_constraintTop_toBottomOf="@+id/Token" />

    <TextView
        android:id="@+id/punyaAkunView"
        android:layout_width="194dp"
        android:layout_height="31dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="150dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Sudah punya akun?"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ButtonDaftarGuru"
        app:layout_constraintHorizontal_bias="0.41"
        app:layout_constraintStart_toStartOf="@+id/ButtonDaftarGuru" />

    <TextView
        android:id="@+id/DaftarView"
        android:layout_width="81dp"
        android:layout_height="30dp"
        android:layout_marginBottom="150dp"
        android:fontFamily="@font/montserrat"
        android:text="Masuk"
        android:textColor="#106F85"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/punyaAkunView" />

</androidx.constraintlayout.widget.ConstraintLayout>
