<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Layer untuk Bayangan (di bagian bawah) -->
    <item>
        <shape android:shape="rectangle">
            <!-- Warna bayangan, biasanya semi-transparan hitam/abu-abu -->
            <solid android:color="#1A000000" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- Layer untuk Kotak Input Utama (di bagian atas) -->
    <item
        android:bottom="2dp" > <!-- Geser ke atas 2dp untuk memunculkan bayangan di bawah -->
        <shape android:shape="rectangle">
            <!-- Warna latar belakang solid di dalam EditText -->
            <solid android:color="@android:color/white" />

            <!-- Pengaturan garis tepi (stroke) dengan lebar 2dp -->
            <stroke
                android:width="2dp"
                android:color="#1F2937" /> <!-- Warna garis tepi abu-abu muda -->

            <!-- Sudut membulat (corner radius) sebesar 10dp -->
            <corners android:radius="10dp" />
        </shape>
    </item>

</layer-list>
