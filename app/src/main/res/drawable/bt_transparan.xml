<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Glass putih transparan -->
    <solid android:color="#55FFFFFF" />

    <!-- Garis pinggir hitam tipis -->
    <stroke
        android:width="2dp"
        android:color="@color/black" />  <!-- hitam 20% opacity -->

    <!-- Radius sama seperti tombol utama -->
    <corners android:radius="12dp" />

    <!-- Padding dalam tombol -->
    <padding
        android:left="12dp"
        android:top="10dp"
        android:right="12dp"
        android:bottom="10dp" />

</shape>